<%- include('./partials/header') %>
<% if(success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>/
    <% } %>

    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="/owners/product/Create">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
       
            <a class="text-red-500" href="/products/deleteAll">Delete all</a>
            <div class="flex items-start gap-5 flex-wrap">
            <% products.forEach((product)=>{ %>
                    <div class="w-60 bg-[<%= product.bgcolor %>] flex-nowrap">
